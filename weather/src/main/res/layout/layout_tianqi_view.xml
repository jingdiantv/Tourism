<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600pt"
    android:layout_height="280pt"
    android:background="@color/gray">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_weather_wea"
        android:layout_width="180pt"
        android:layout_height="180pt"
        android:layout_marginStart="20pt"
        android:layout_marginTop="20pt"
        android:contentDescription="@string/iv"
        android:scaleType="fitXY"
        android:src="@drawable/ic_weather_err"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weather_wea"
        android:layout_width="180pt"
        android:layout_height="80pt"
        android:gravity="center|top"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="50pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_weather_wea" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weather_city"
        android:layout_width="380pt"
        android:layout_height="80pt"
        android:gravity="center|top"
        android:textColor="@color/white"
        android:textSize="50pt"
        app:layout_constraintStart_toEndOf="@id/tv_weather_wea"
        app:layout_constraintTop_toTopOf="@id/tv_weather_wea" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weather_tem"
        android:layout_width="240pt"
        android:layout_height="140pt"
        android:layout_marginStart="20pt"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="88pt"
        app:layout_constraintBottom_toBottomOf="@id/iv_weather_wea"
        app:layout_constraintStart_toEndOf="@id/iv_weather_wea"
        app:layout_constraintTop_toTopOf="@id/iv_weather_wea" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weather_wendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/white"
        android:textSize="35pt"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_weather_tem"
        app:layout_constraintStart_toEndOf="@id/tv_weather_tem" />

    <TextView
        android:id="@+id/tv_weather_err"
        android:layout_width="380pt"
        android:layout_height="100pt"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="80pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_weather_tem"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.whiner.common.view.TvButton
        android:id="@+id/tv111"
        android:layout_width="300pt"
        android:layout_height="200pt"
        android:layout_marginStart="100pt"
        android:layout_marginTop="100pt"
        android:background="@drawable/bg_btn1"
        android:text="@string/app_name"
        android:textSize="50pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.whiner.common.view.TvButton
        android:id="@+id/tv1112"
        android:layout_width="300pt"
        android:layout_height="200pt"
        android:layout_marginStart="600pt"
        android:layout_marginTop="100pt"
        android:background="@drawable/bg_btn1"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/btn_text_color"
        android:textSize="80pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.whiner.player.simple.TvVideoView
        android:id="@+id/vod"
        android:layout_width="2000pt"
        android:layout_height="1200pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        style="@style/HorizontalProgressBar"
        android:layout_width="2000pt"
        android:layout_height="200pt"
        android:progress="40"
        android:theme="@style/HorizontalProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.whiner.weather.tianqi.TianqiView
        android:id="@+id/tianqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>